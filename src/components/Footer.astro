<img src={IFOlogo.src} class="absolute top left w-35 pl-16" />

<div
  class="bg-gray-800 py-24 px-12 md:px-24 text-sm manrope-light leading-8 border-t-10 border-white max-w-full"
>
  <div
    class="flex flex-col md:flex-row md:gap-10 mx-auto md:pl-15 max-w-full flex-wrap"
  >
    <div class="text-gray-200 pb-8 md:basis-1/4 md:pr-20">
      <p class="uppercase md:pb-6 manrope-bold text-nowrap">
        international facilitators org
      </p>
      <p>277 S. Washington Street</p><p>Suite 210</p><p>Alexandria, VA 22314</p>
      <p>
        <a href="mailto:info@internationalfacilitators.org"
          >info@internationalfacilitators.org</a
        >
      </p>
    </div>
    <div class="text-gray-200 pb-8 md:basis-1/5">
      <p class="uppercase md:pb-6 manrope-bold text-nowrap">site map</p>

      <nav class="md:flex-wrap">
        <p>
          <a class="hover:text-white" href="/">Home</a>
        </p>
        <p>
          <a class="hover:text-white" href="facilitator-training"
            >Facilitator Training</a
          >
        </p>
        <p>
